@model DataMarkup.ViewModels.LoginViewModel

<div class="container float-left mt-3">
    <h2>Login</h2>
    <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" as>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="UserName"></label><br/>
            <input class="form-control w-50" asp-for="UserName"/>
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label><br/>
            <input class="form-control w-50" asp-for="Password"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-check">
            <input class="form-check-input" asp-for="Remember"/>
            <label class="form-check-label" asp-for="Remember"></label>
        </div>
        <div class="mt-2">
            <input class="btn btn-outline-primary" type="submit" value="Login"/>
        </div>
    </form>
</div>